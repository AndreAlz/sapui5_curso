<mvc:View controllerName="curso.frontend.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page title="MARKET PLACE">
        <IconTabBar expandable="false">
            <items>
                <IconTabFilter text="Productos" icon="sap-icon://retail-store">
                    <content>
                        <Panel expandable="false">
                            <infoToolbar>
                                <Toolbar>
                                    <Title text="Lista de productos"/>
                                </Toolbar>
                            </infoToolbar>
                            <headerToolbar>
                                <Toolbar>
                                    <SearchField width="250px" placeholder ="Buscar productos..." change="onSearchProducto"/>
                                </Toolbar>
                            </headerToolbar>
                            <content>
                                <HBox id="h_contenedorProductos" width="100%" wrap="Wrap">
                                </HBox>
                            </content>
                        </Panel>
                    </content>
                </IconTabFilter>
                <IconTabFilter text="Carrito" icon="sap-icon://product"/>
                <IconTabFilter text="Dashboard" icon="sap-icon://bbyd-dashboard"/>
                <IconTabFilter text="Mantenimiento" icon="sap-icon://retail-store"/>
            </items>
        </IconTabBar>
    </Page>
</mvc:View>
