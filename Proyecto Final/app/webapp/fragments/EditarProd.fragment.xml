<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="dg_editar_prod" title="Editar Producto" contentWidth="auto">
        <content>
            <VBox class="sapUiSmallMargin">
                <VBox width="250px">
                    <Label text="Titulo"/>
                    <Input id="in_titulo" value="{selectedEditarProd>/titulo}" placeholder="Titulo" width="250px" />
                </VBox>
                <VBox width="250px">
                    <Label text="Marca"/>
                    <Input id="in_marca" value="{selectedEditarProd>/marca}" placeholder="Marca" width="250px" />
                </VBox>
                <VBox width="250px">
                    <Label text="Precio"/>
                    <Input id="in_precio" value="{selectedEditarProd>/precio}" placeholder="Precio" width="250px" />
                </VBox>
                <VBox width="250px">
                    <Label text="Stock"/>
                    <Input id="in_stock" value="{selectedEditarProd>/stock}" type="Number" placeholder="Stock" width="250px" />
                </VBox>
            </VBox>
        </content>
        <buttons>
            <Button text="Guardar" press="onGuardar" />
            <Button text="Cerrar" press="onCerrarDialog" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>