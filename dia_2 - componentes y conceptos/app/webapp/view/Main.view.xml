<mvc:View controllerName="curso.frontend.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page title="CURSO SAPUI5">
        <Panel headerText="Panel 1" id="test">
            <VBox>
                <Label text="parte1:"/>
                <Input placeholder="input1" width="200px" liveChange="changeInputValueState"/>
                <Label text="parte2:"/>
                <Input placeholder="input1" width="200px" liveChange="changeInputValueState"/>
                <Label text="combobox: "/>

                <ComboBox placeholder="combobox" width="200px">
                    <items>
                        <core:Item text="Item1" key="1"/>
                        <core:Item text="Item2" key="2"/>
                        <core:Item text="Item3" key="3"/>
                    </items>
                </ComboBox>

                <Label text="radio buttons: "/>
                <RadioButtonGroup>
                    <RadioButton text="radio1" />
                    <RadioButton text="radio2"/>
                </RadioButtonGroup>
                <Label text="checkboxes: "/>
                <CheckBox text="checkbox1"/>
                <CheckBox text="checkbox1"/>
            </VBox>
        </Panel>
        <footer>
            <Toolbar>
                <Button text="Guardar" icon="sap-icon://save" type="Success" press="irVistaDatos"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
