<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="dialogTexto" title="Fragmento - Ingreso Mensaje" width="100%">
        <content>
            <VBox width="100%">
                <VBox class="sapUiSmallMargin" width="80%">
                    <Input class="sapUiSmallMargin" id="dg_texto" placeholder="Texto!" />
                </VBox>
            </VBox>
        </content>
        <buttons>
            <Button text="Acceptar" type="Success" press="onDialogAccept"/>
            <Button text="Cerrar" type="Reject" press="onDialogClose"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>