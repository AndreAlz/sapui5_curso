<mvc:View controllerName="curso.frontend.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page title="CURSO SAPUI5">
        <content>
            <VBox alignItems="Center" class="sapUiSmallMargin">
                <VBox width="300px">
                    <Label text="Nombre:" />
                    <Input id="in_nombre" placeholder="Nombre" />
                </VBox>
                <VBox width="300px">
                    <Label text="DNI:" />
                    <Input id="in_dni" placeholder="DNI" />
                </VBox>
                <VBox width="300px">
                    <Label text="Telefono:" />
                    <Input id="in_telefono" placeholder="Telefono" />
                </VBox>
                <VBox width="300px">
                    <Label text="Tipo de Solicitud:" />
                    <ComboBox id="cb_tipo_sol" width="300px" selectedKey="1">
                        <items>
                            <core:Item key="1" text="General"/>
                            <core:Item key="2" text="Traslado"/>
                        </items>
                    </ComboBox>
                </VBox>
                <Button text="Enviar" press="onEnviar"/>
            </VBox>
        </content>
        <footer>
        </footer>
    </Page>
</mvc:View>

